.content {
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
  margin-bottom: 20rpx;
}

.add {
  box-sizing: border-box;
  flex: 1;
  margin: 20rpx 30rpx 0 30rpx;
  background-color: white;
}

.item {
  margin: 20rpx 16rpx 0 16rpx;
  box-sizing: border-box;
  flex: 1;
  background-color: white;
}

.round {
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid lightgray;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #888; 
}

.img {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx 40rpx;
  padding: 8rpx;
}

.name {
  font-weight: bold;
  font-size: 15pt;
  color: #444;
}

.desc {
  color: #777;
  font-size: 11pt;
  margin-top: 2rpx;
  font-weight: normal;
}
